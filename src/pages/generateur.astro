---
import "../styles/global.css";
---

<html lang="fr" data-theme="custom-theme">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SVG Generator</title>
  <link href="https://cdn.jsdelivr.net/npm/daisyui@2.51.5/dist/full.css" rel="stylesheet">
</head>
<body class="bg-base-100 min-h-screen flex flex-col justify-between p-4 gap-4">

  <div class="card w-full bg-base-200 shadow-xl p-4 flex-1 mb-2">
    <h2 class="text-xl font-bold mb-2">Rendu SVG :</h2>
    <div id="svg-container" class="flex justify-center items-center min-h-[200px] bg-base-100 rounded"></div>
  </div>

  <div class="card w-full bg-base-200 shadow-xl p-4 flex-1 mb-2">
    <h2 class="text-xl font-bold mb-2">Code SVG généré :</h2>
    <pre id="svg-output" class="bg-base-100 p-2 rounded overflow-x-auto min-h-[100px]"></pre>
  </div>

  <div class="card w-full bg-base-200 shadow-xl p-4">
    <h2 class="text-xl font-bold mb-2">Entrez votre prompt :</h2>
    <textarea id="user-prompt" class="textarea textarea-bordered w-full mb-2" rows="3" placeholder="Ex : a red car"></textarea>
    <button id="generate-button" class="btn btn-primary w-full">Générer SVG</button>
  </div>

</body>
</html>